{
  "compilerOptions": {
    "checkJs": false,
    "allowJs": true,
    "target": "es2020",
    "module": "commonjs",
    "jsx": "react",
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src"]
}

